<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.tipper.tipper">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/action_bar_home_drawable"
        android:label="@string/app_name"
        android:roundIcon="@drawable/background_post_highlight"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">

        <provider
            android:name=".app.database.MyDataProvider"
            android:authorities="io.tipper.domain.contentprovider.dataprovider"
            android:exported="false" >
        </provider>

        <activity android:name=".TipperHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RecieveActivity"/>
        <activity android:name=".SendActivity"/>
        <activity android:name=".TransactionListActivity"/>
    </application>

</manifest>